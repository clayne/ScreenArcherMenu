{
    "type": "mixed",
    "update": true,
    "get": {
        "type": "sam",
        "name": "GetCamera"
    },
    "set": {
        "type": "sam",
        "name": "SetCamera",
        "refresh": true
    },
    "save": {
        "name": "$SAM_Save",
        "type": "func",
        "func": {
            "type": "entry",
            "entry": {
                "func": {
                    "type": "sam",
                    "name": "SaveCameraFile"
                }
            }
        }
    },
    "load": {
        "name": "$SAM_Load",
        "type": "func",
        "func": {
            "type": "folder",
            "folder": {
                "format": "full",
                "path": "Data\\F4SE\\Plugins\\SAM\\Camera",
                "ext": ".json",
                "func": {
                    "type": "sam",
                    "name": "LoadCameraPath"
                },
                "pop": false
            }
        }
    },
    "items": [
        {
            "name": "$SAM_PosX",
            "type": "touch",
            "touch": {
                "type": "float",
                "step": 2.0,
                "fixed": 2,
                "mod": 0.5
            }
        },
        {
            "name": "$SAM_PosY",
            "type": "touch",
            "touch": {
                "type": "float",
                "step": 2.0,
                "fixed": 2,
                "mod": 0.5
            }
        },
        {
            "name": "$SAM_PosZ",
            "type": "touch",
            "touch": {
                "type": "float",
                "step": 2.0,
                "fixed": 2,
                "mod": 0.5
            }
        },
        {
            "name": "$SAM_Yaw",
            "type": "slider",
            "slider": {
                "type": "float",
                "min":-180.0,
                "max": 180.0,
                "step": 0.1,
                "stepkey": 1.0,
                "fixed": 2
            }
        },
        {
            "name": "$SAM_Pitch",
            "type": "slider",
            "slider": {
                "type": "float",
                "min":-180.0,
                "max": 180.0,
                "step": 0.1,
                "stepkey": 1.0,
                "fixed": 2
            }
        },
        {
            "name": "$SAM_Roll",
            "type": "slider",
            "slider": {
                "type": "float",
                "min":-180.0,
                "max": 180.0,
                "step": 0.1,
                "stepkey": 1.0,
                "fixed": 2
            }
        },
        {
            "name": "$SAM_FOV",
            "type": "slider",
            "slider": {
                "type": "float",
                "min": 1.0,
                "max": 160.0,
                "step": 0.1,
                "stepkey": 1.0,
                "fixed": 2
            }
        },
        {
            "name": "Save State 1",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "SaveCameraState"
            }
        },
        {
            "name": "Save State 2",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "SaveCameraState"
            }
        },
        {
            "name": "Save State 3",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "SaveCameraState"
            }
        },
        {
            "name": "Load State 1",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "LoadCameraState"
            }
        },        
        {
            "name": "Load State 2",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "LoadCameraState"
            }
        },
        {
            "name": "Load State 3",
            "type": "list",
            "func": {
                "type": "sam",
                "name": "LoadCameraState"
            }
        }
    ]
}